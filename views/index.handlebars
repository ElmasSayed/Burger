<div class="container-fluid">
    <div class="row">       
        <div class="container col-md-12" style="background-color: black; margin-top: 5px;">

            <div class="jumbotron" style="background-color: #ffdae0; margin-top: 5px; background-image:/public/img/burger.jpg;">

                <form action="/" method="POST">
                    <div style="text-align:center; ">
                        <h1>EAT-DA-BURGERS</h1>
                        <input type="text" id="burgerName" placeholder="   Enter Burger you want to eat" style="width: 300px; border:solid; border-color: red; border-width: .2px; border-radius: 2px; height: 30px; font-size: 15px;">
                        <button type="submit" id="addBurger" class="btn btn-warning" style="margin-left: 15px;">Submit</button>
                    </div>
                </form>

                <div class="row" style="margin-top: 3px;">
                    
                <form action="/" method="PUT">
                    <div class="col-md-6" style="height: 400px; overflow-y: scroll; width: 460px;">
                        {{#undevouredBurgers}}
                        <div style="border: solid; border-color: red; border-width: .2px; border-radius: 5px; width:400px; padding: 5px;  margin-top: 20px; text-align: center;">
                                <p>{{burger_name}}</p>
                                <button type="button" id={{id}} class="btn btn-warning">Devour It!</button>
                        </div>  
                        {{/undevouredBurgers}}
                    </div>
                </form>

                    <div class="col-md-6"  style="height: 400px; overflow-y: scroll; width: 460px; margin-left: 50px;">
                        {{#devouredBurgers}}
                        <div>
                            <div style="border: solid; border-color: red; border-width: .2px; border-radius: 5px; width:400px; padding: 5px; margin-top: 20px;">
                                <p>{{burger_name}}</p>
                            </div>
                        </div>
                        {{/devouredBurgers}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12" style="background-color: black; color:white; text-align: center; height: 50px; width: 100%; margin-top: 30px; border-radius: 2px; padding: 15px;">
                        <p>Copyright@ Elmas Sayed 2017</p>
                    </div>
                </div>
            </div>
        </div>
    </div>            
</div>
